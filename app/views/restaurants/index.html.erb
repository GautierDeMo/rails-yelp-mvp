<h1>Restaurants#Index <%= link_to 'Add a Restaurant', new_restaurant_path, class: "btn btn-outline-primary" %></h1>
<div id="restaurants">
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
      <h3>Name : <%= restaurant.name %></h3>
      <h4>Address : <%= restaurant.address %></h4>
      <h4>Phone number : <%= restaurant.phone_number %></h4>
      <h4>Category : <%= restaurant.category %></h4>
      <%= link_to 'View', restaurant_path(restaurant), class: "btn btn-outline-primary" %>
      </li>
    <% end %>
  </ul>
</div>
